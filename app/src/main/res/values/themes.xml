<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Qzin application theme. -->
    <style name="QZinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/white</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme" parent="QZinTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="textLargeTitle">@style/text_lg_title_bl</item>
        <item name="textTitle">@style/text_title_bl</item>
        <item name="textSubTitle">@style/text_sub_title_light</item>
        <item name="textTiny">@style/text_tiny_light</item>
        <item name="textEditTextLabel">@style/edit_text_lable_light</item>
        <item name="textEditText">@style/text_edit_text</item>
        <item name="searchEditText">@style/search_edit_text</item>
        <item name="textRegular34">@style/text_regular_34</item>



        <!-- Drawer -->
        <item name="material_drawer_background">@android:color/white</item>
    </style>

    <style name="HostQZinTheme" parent="AppTheme">
        <item name="material_drawer_background">#303030</item>
        <item name="material_drawer_primary_text">#DEFFFFFF</item>
        <item name="material_drawer_primary_icon">#8AFFFFFF</item>

    </style>

</resources>