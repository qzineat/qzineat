<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Qzin application theme. -->
    <style name="QZinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme" parent="QZinTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="eventCardBackground">@style/event_card_background</item>
        <item name="textTitle">@style/text_title_bl</item>
        <item name="textSubTitle">@style/text_sub_title_light</item>
    </style>

</resources>