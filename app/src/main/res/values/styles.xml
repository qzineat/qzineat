<resources>


    <!-- Qzin application theme. -->
    <style name="QZinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>



    <style name="AppTheme" parent="QZinTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserListTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserProfileEditStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserListDateStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserListLocationStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="EditStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/material_blue_500</item>
    </style>
    <style name="DateStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="LocationStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="CountStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="LoginDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SignUpDialog" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
