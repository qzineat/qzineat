<resources>


    <!-- QZin -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="event_card_background">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="text_lg_title_bl">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_large_title_text_size</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    <style name="text_title_bl">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_title_text_size</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    <style name="text_sub_title_light">
        <item name="android:textSize">@dimen/text_sub_title_text_size</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>
    <style name="text_tiny_light">
        <item name="android:textSize">@dimen/text_tiny_text_size</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>
    <style name="edit_text_lable_light">
        <item name="android:textSize">@dimen/text_sub_title_text_size</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>
    <style name="text_edit_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_edit_text_size</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="search_edit_text">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hint_color_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_title_text_size</item>
    </style>

    <style name="nav_drawer_background_wh">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="nav_drawer_swap_wh">
        <item name="android:background">@color/drawer_gray</item>
    </style>


    <style name="nav_drawer_background_gr">
        <item name="android:background">@color/drawer_gray</item>
    </style>
    <style name="nav_drawer_swap_gr">
        <item name="android:background">@android:color/white</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="DrawerTextGray">
        <item name="android:textColor">@color/drawer_gray</item>
    </style>
    <style name="DrawerTextWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>




    <style name="UserListTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserProfileEditStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="DailogFragmentStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserListDateStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="UserListLocationStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="EditStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/material_blue_500</item>
    </style>

    <style name="CountStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="LoginDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SignUpDialog" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
