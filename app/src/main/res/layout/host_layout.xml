<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Name"
                    android:singleLine="true"
                    style="?textEditText"
                    />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date/Time:"
                android:layout_marginTop="10dp"
                style="?textEditTextLabel"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    style="?textEditText"/>
                <TextView
                    android:id="@+id/tvTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:hint="Select Time"
                    style="?textEditText"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textEditTextLabel"
                android:layout_marginTop="10dp"
                android:text="Max No. of Guests:"
                />
            <Spinner
                android:id="@+id/spGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="$$"
                android:singleLine="true"
                style="?textEditText"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                style="?textEditText"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/tvMenuCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textEditTextLabel"
                android:layout_marginTop="10dp"
                android:text="Menu Category:"
                />
            <Spinner
                android:id="@+id/sMenuCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menu Description"
                style="?textEditText"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tvAlcohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textEditTextLabel"
                android:layout_marginTop="10dp"
                android:text="Alcohol:"/>
            <Spinner
                android:id="@+id/spAlcohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/yesno_Array"/>


            <Button
                android:id="@+id/btSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>