<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!-- The main content view where fragments are loaded -->
        <FrameLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view"
        android:clipToPadding="false"
        android:paddingBottom="48dp"
        style="?navDrawerBackground"
        app:itemTextColor="@color/drawer_state_list"
        >

        <LinearLayout
            android:id="@+id/llSwitch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginBottom="-49dp"
            style="?navDrawerSwap"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_switch"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DrawerTextWhite"
                android:text="@string/switch_host"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSwitchHost"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginBottom="-49dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            style="?navDrawerSwap"
            >

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/switch_search"
                style="@style/DrawerTextGray"
                android:gravity="center_vertical"/>
        </LinearLayout>


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
