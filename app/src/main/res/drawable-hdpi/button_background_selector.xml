<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270"
                      android:endColor="@color/qzin_ui_button"
                      android:startColor="@color/qzin_ui_button" />
            <stroke android:width="1dp" android:color="@color/qzin_ui_button_push" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/qzin_ui_button_focus" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270"
                      android:endColor="@color/qzin_ui_button"
                      android:startColor="@color/qzin_ui_button" />
            <stroke android:width="1dp" android:color="@color/qzin_ui_button" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
</selector>